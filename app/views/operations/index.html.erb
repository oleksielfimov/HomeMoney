<h1>Hello</h1>
<%= button_to 'Add new record', { :action => :new }, :method => :get %>
<table>
	<tr>
		<th>Type of payment</th>
		<th>Amount</th>
		<th>Income/Expanse</th>
		<th>Account</th>
		<th>Date</th>
	</tr>	
			<% @operations.each do |operation| %>
	<tr>
		<td><%= operation.mark %></td>
		<td><%= operation.amount %></td>
		<td><%= operation.purpose %></td>
		<td><%= operation.acct %></td>
		<td><%= operation.date %></td>
		<td><%= button_to 'Delete', { :action => :destroy, :id => operation.id }, :method => :delete, :confirm => 'Честно?' %></td>
	</tr>
	<% end %>
</table>